{% extends 'templates/default.twig' %}

{% block title %}Forgot password{% endblock %}

{% block content %}
    <div class="container main">
        <h1 class="page-title">Eat@CS</h1>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {% include 'templates/flash.twig' %}
                <p>
                    In case you forgot your password, just enter your email address you used to sign
                    up in the form below. We will then send you an email with further instructions.
                </p>
                <form method="post" action="{{ path_for('forgot') }}">
                    <div class="form-group">
                        <label for="forgot_email">E-Mail:</label>
                        <input type="email" class="form-control" id="forgot_email" name="forgot_email" value="{{ old['forgot_email'] }}">
                        <span class="form-error">{{ errors['forgot_email']|first }}</span>
                    </div>
                    <div class="clearfix">
                        <input type="submit" class="btn btn-primary pull-right" value="Submit">
                        <a href="{{ base_url() }}signup">Not registered yet?</a><br>
                        <a href="{{ base_url() }}">You remember your password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}