{% extends 'templates/default.twig' %}

{% block title %}Sign In{% endblock %}

{% block content %}
    <div class="container main">
        <h1 class="page-title">Eat@CS</h1>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {% include 'templates/flash.twig' %}
                <p>Please login to gain access to the configuration panel.</p>
                <form method="post" action="{{ path_for('sign-in') }}">
                    <div class="form-group">
                        <label for="email">E-Mail:</label>
                        <input type="email" class="form-control" id="email" name="email" value="{{ old['email'] }}">
                        <span class="form-error">{{ errors['email']|first }}</span>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" class="form-control" id="password" name="password">
                        <span class="form-error">{{ errors['password']|first }}</span>
                    </div>
                    <div class="clearfix">
                        <input type="submit" class="btn btn-primary pull-right" value="Login">
                        <a href="{{ base_url() }}signup">Not signed up yet?</a><br>
                        <a href="{{ base_url() }}forgot">Forgot password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}